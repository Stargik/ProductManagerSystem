@model DAL.Entities.Characteristic

@{
    ViewData["Title"] = "Редагувати";
    ViewData["ErrorMessage"] = TempData["ErrorMessage"];
}

<h1>Редагувати характеристику</h1>
<hr />
<div class="btn-group btn-group-sm" role="group">
    <input type="submit" form="editForm" value="Зберегти" class="btn btn-outline-dark" />
    <a class="btn btn-outline-dark" asp-controller="Products" asp-action="Edit" asp-route-id="@Model?.ProductId">Скасувати</a>
</div>
<hr />
<form asp-action="Edit" id="editForm" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group col-md-4">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="ValueNumber" class="control-label"></label>
        <input asp-for="ValueNumber" class="form-control" />
        <span asp-validation-for="ValueNumber" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="UnitType" class="control-label"></label>
        <input asp-for="UnitType" class="form-control" />
        <span asp-validation-for="UnitType" class="text-danger"></span>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
