@using Microsoft.AspNetCore.Identity
@model MVCWebApp.Areas.Admin.Models.RegisterUserViewModel

@{
    ViewData["Title"] = "Створити";
    ViewData["ErrorMessage"] = TempData["ErrorMessage"];
}

<h1>Створити користувача</h1>
<hr />
<div class="btn-group btn-group-sm" role="group">
    <input type="submit" form="createForm" value="Створити" class="btn btn-outline-dark" />
    <a class="btn btn-outline-dark" asp-action="Index">Скасувати</a>
</div>
<hr />
<form class="row" id="createForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="col-md-6">
        <div class="row g-3 mb-3">
            <div class="form-group col-12">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Імʼя" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" autocomplete="email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" placeholder="Пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="PasswordConfirm" class="form-label"></label>
                <input asp-for="PasswordConfirm" class="form-control" autocomplete="new-password" placeholder="Пароль" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row g-3">
            <div class="col-12">
                <h6>@Html.DisplayNameFor(model => model.UserRoles)</h6>
                <fieldset class="form-group">
                    @foreach (IdentityRole role in ViewBag.Roles)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="roles" value="@role.Name" )
                                   class="form-check-input" />
                            <label class="form-check-label">@role.Name</label>
                        </div>
                    }
                </fieldset>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
